	hash< as_object_interface*, .. <== hash< smart_ptr<as_object_interface>, 
	* gameswf/gameswf_video_base.(cpp,h),
	* gameswf/gameswf_video_impl.cpp,
	* gameswf/gameswf_mutex.h,
